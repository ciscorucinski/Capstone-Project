<FrameLayout android:id="@+id/frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/collection_all_appbar"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header_left_nav_allscreens"
        app:menu="@menu/activity_navigation_drawer_main">

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_setting"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-48dp"
            android:translationZ="2dp"
            app:menu="@menu/activity_navigation_drawer_extra"/>

    </android.support.design.widget.NavigationView>

    <android.support.design.widget.NavigationView
        android:id="@+id/playlist_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/drawer_header_right_nav_collection_one"
        app:menu="@menu/collection_playlist"/>

</FrameLayout>
